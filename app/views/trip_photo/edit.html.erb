	<%- @page_title = 'Edit ' + h(@trip_photo.title) -%>

	<h1>Edit <%= h(@trip_photo.title) %></h1>

	<p style="text-align: center;"><img src="<%= @trip_photo.photo(:full) %>" alt="<%= h(@trip_photo.title) %>" /></p>

	<% form_for @trip_photo, :url => { :action => 'update', :trip_id => @trip_photo.trip.id } do |f| %>
	  <%= f.error_messages %>
	  <fieldset>
	  <legend>Edit photo info</legend>
	  <label for="trip_photo_title">Title:</label><%= f.text_field :title, :style => 'width: 570px;' %>
	  <label for="trip_photo_description">Description</label><%= f.text_area :description, :style => 'width: 570px; height: 150px;' %>
	  <p class="fieldtip"><%= render :partial => 'shared/permitted_xhtml_tags.html.erb' %></p>
          <label for="trip_photo_license">License:</label><%= f.select :license, User.available_photo_licenses %>
	  <%= f.hidden_field :id, :value => @trip_photo.id %>
	  </fieldset>
	  <fieldset class="actionbuttons">
	   <%= f.submit %>
	  </fieldset
	<% end %>

	<p><%= link_to 'Delete this photo', {:action => 'destroy', :trip_id => @trip_photo.trip.id, :id => @trip_photo.id}, :confirm => 'Are you sure you want to delete this photo? This cannot be undone.', :method => :delete %></p>
